<odoo>
    <record id="partner_accounts_wizard_view_form" model="ir.ui.view">
        <field name="name">partner.accounts.wizard.view.form</field>
        <field name="model">partner.account.wizard</field>
        <field name="arch" type="xml">
            <form string="Specific Partner Accounts">
                <sheet>
                    <group>
                        <group>
                            <field name="spec_account_receivable_id"/>
                        </group>
                        <group>
                            <field name="spec_account_payable_id"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>